	pod 'AlamofireImage'
	pod 'Alamofire'
	pod 'SwiftyJSON'

# Facebook
	pod 'FBSDKCoreKit'
	pod 'FBSDKLoginKit'

# Personal
	pod 'WASKit', '0.2.0'

# Firebase
	pod 'Firebase/Core'
	pod 'Firebase/Performance'
	pod 'Firebase/Storage'

end
